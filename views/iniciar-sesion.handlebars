<main class="contenedor">
    <form action="/iniciar-sesion" class="default-form" method="post">

        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Ingresa tu email" required>
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Ingresa tu password" required>
        </div>

        <div class="campo acciones">
            <a href="/crear-cuenta">Crea una cuenta</a>
            <a href="/restablecer-password">Olvide mi password</a>
        </div>

        <div class="campo">
            <input type="submit" value="Iniciar sesion" class="btn btn-azul">
        </div>
    </form>
</main>